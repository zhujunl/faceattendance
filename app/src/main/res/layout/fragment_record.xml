<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.RecordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_toolbar_height">

        <ImageView
            android:id="@+id/iv_search"
            android:src="@drawable/ic_action_search_white"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:layout_width="@dimen/custom_toolbar_height"
            android:layout_height="@dimen/custom_toolbar_height" />

    </RelativeLayout>

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:background="@color/darkgrey"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/custom_toolbar_height">

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_name"
                style="@style/record_item"
                android:singleLine="true"
                android:hint="请输入姓名"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <Spinner
                android:id="@+id/spinner_sex"
                android:entries="@array/sex"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/et_card_number"
                android:hint="请输入证件号码"
                style="@style/record_item"
                android:singleLine="true"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <Spinner
                android:id="@+id/spinner_upload"
                android:entries="@array/upload"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_start_time"
                style="@style/record_item"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:hint="起始时间"
                android:textColorHint="@color/gray_light" />

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_end_time"
                style="@style/record_item"
                android:textColorHint="@color/gray_light"
                android:hint="截止时间"
                android:layout_weight="0.75"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/darkgrey"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:background="@color/darkgrey"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:text="姓名"
                style="@style/record_item"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:text="性别"
                style="@style/record_item"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:text="证件号码"
                style="@style/record_item"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:text="上传状态"
                style="@style/record_item"
                android:textColor="@color/white"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <View
                android:background="@color/white"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

            <TextView
                android:textStyle="bold"
                android:text="比对时间"
                style="@style/record_item"
                android:textColor="@color/white"
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_record"
            android:background="@drawable/stroke_shape"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

</LinearLayout>