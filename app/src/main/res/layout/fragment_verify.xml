<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.VerifyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_toolbar_height">

        <TextView
            android:id="@+id/tv_open_verify"
            android:text="比对开关：开"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:background="#00FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.miaxis.faceattendance.view.custom.CameraSurfaceView
                    android:id="@+id/csv_camera"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_verify_frame"
                android:src="@mipmap/add_person_background"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_hint"
                android:visibility="invisible"
                android:textSize="30sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:padding="15dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50dp"
                android:background="@drawable/qing_stroke_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <View
            android:background="@color/darkgrey"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <ScrollView
            android:layout_width="375dp"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>

    </LinearLayout>

</LinearLayout>